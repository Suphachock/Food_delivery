<% var total = 0 %>
<% order.forEach (function (product) { %>
    <% for(var i = 0; i < product.orderlist.length; i++) { %>
      <% var sub = parseInt (product.qty[i] * product.price[i]).toFixed (2) %>
    <% total += +sub %>
    <tr>

        <td><%= i + 1 %></td>
        <td><%= product.orderlist[i] %></td>
        <td><%= product.qty[i] %></td> 
        <td><%= product.price[i] %></td>   
    </tr>
    <% } %> 
    <h4 align="center">ชื่อ : <b><%= product.username %></b>&nbsp เบอร์โทรศัพท์ : <b><%= product.telephone %></b>
      &nbsp เลขห้อง : <b><%= product.room %></b>&nbsp การจัดส่ง : <b><%= product.way %></b>
    </h4>
  <% });%>
  <tr align="center">
    <td></td>
    <td></td>
    <td></td>
    <td><b>รวม: </b>฿<%= total %></td>
</tr>




