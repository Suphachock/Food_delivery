<!DOCTYPE html>
<html lang="en">
  
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>FoodMax</title>
    <!-- Link To CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Box Icons -->
    <link
      href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
    <style>
      div.cart-content{
        
        width: 325px;
        height: 700px;
        overflow-y: scroll;
      }
      ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  
}
.badge {
  padding-left: 9px;
  padding-right: 9px;
  -webkit-border-radius: 9px;
  -moz-border-radius: 9px;
  border-radius: 9px;
}

.label-warning[href],
.badge-warning[href] {
  background-color: #c67605;
}
#lblCartCount {
    font-size: 12px;
    background: #ff0000;
    color: #fff;
    padding: 0 5px;
    vertical-align: top;
    margin-left: -10px; 
}

</style>
  </head>
  <body>
    <!-- Header -->
    <header>
      <!-- nav -->
      <div class="nav container">
        <a href="/" class="logo"><i class="fa fa-cutlery" aria-hidden="true"></i> FoodMax</a>
        <!-- Cart-Icon -->
        <ul style="line-height:10%">
          <li class="nav-item active">
          <!-- <i class="bx bx-shopping-bag" id="cart-icon"></i> -->
          <a href="#" class="menu"><i class="fa fa-user" style="font-size:20px"></i> สวัสดีคุณ <%= username.split(" ")[0] %><a>
            <a href="/checkout" class="menu"><i class="fa" style="font-size:24px">&#xf07a;</i>
              <span class='badge badge-warning' id='lblCartCount'>
                <% if (cart != undefined) { %>
                  <% var total=0 %>
                  <% for(var i=0; i<cart.length; i++) { %>
                    <% total += +cart[i].qty %>
                  <% } %>
                  <%= total %>
                  <% } %>
                
              </span>ตะกร้าสินค้า</span>
            </a>
            <a href="/order?id=<%= username %>" class="menu"><i class="fa fa-archive" style="font-size:20px" data-id=<%= id %> ></i> ออเดอร์ที่สั่ง<a></a>
          <a href="/logout" class="menu"><i class="fa fa-sign-in" aria-hidden="true"></i> ออกจากระบบ</a> 
          </li>

        </ul>

      </div>
      <div class="cart">
        <h2 class="cart-title">Your Cart</h2>
        <div class="cart-content">
      </div>
      
      <!-- Total -->
      <div class="total">
          <div class="total-title">Total</div>
          <div class="total-price">$0</div>
      </div>
      <!-- Buy Button -->
      <button type%="button" class="btn-buy">Buy Now</button>
      <!-- Cart CLose -->
      <i class='bx bx-x' id="close-cart"></i>                       
      </div> 
    </header>

    <section class="shop container">
      <h1 class="section-title">เมนูอาหาร</h1>
      <!-- Content -->
      <% if (msg.length > 0) { %>
        <div class="alert alert-success" align="center"><b><h5><%= msg %></h5></b></div>
        <% } %>
      <div class="shop-content">
 
        <% for(var i = 0; i < product.length; i++) { %>
        <div class="product-box" >
          <img src="<%=  product[i].img %>" alt="" class="product-img">
          <h2 class="product-title"><%=  product[i].name %></h2>
          ราคา <span class="price"><%=  product[i].price %> บาท</span>
            <br>
            หมวดหมู่ : <span class="categories"><%=  product[i].categories %></span>
         <!-- <i class='bx bx-shopping-bag add-cart'></i> -->
         
         
         <form action="/add-to-cart/<%= product[i]._id %>" method="get">
          
          <button type="submit" class="btn btn-primary">เพิ่มสินค้า <i class="fa fa-cart-plus" style="font-size:15px" aria-hidden="true"></i></button>
        </form>
        </div>
        <% } %>


  </section>
  </body>

</html>
