    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add-product" class="border-shadow">
                    <span class="text-gradient">Add Product <i class="fa fa-square-o fa-stack-2x"></i>
                </a>
            </div>

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Product Image</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Categories</th>
                            <th>Update/Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/showProduct') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
