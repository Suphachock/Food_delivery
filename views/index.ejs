<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    
    <title>MiniMart</title>
    <!-- Link To CSS -->
    <link rel="stylesheet" href="/css/main.css" type="text/css" />
    <!-- Box Icons -->
    <link
      href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css"
      rel="stylesheet"
    />

  </head>
  <body>
    <!-- Header -->
    <header>
      <!-- nav -->
      <div class="nav container">
        <a href="#" class="logo">FoodManda</a>
        <!-- Cart-Icon -->
        <ul>
          <li class="nav-item active">
          <a href="/login" class="menu">Login & Register</a>
          </li>

        </ul>

      </div>
      <div class="cart">
        <h2 class="cart-title">Your Cart</h2>
        <div class="cart-content">
      </div>
      
      <!-- Total -->
      <div class="total">
          <div class="total-title">Total</div>
          <div class="total-price">$0</div>
      </div>
      <!-- Buy Button -->
      <button type%="button" class="btn-buy">Buy Now</button>
      <!-- Cart CLose -->
                         
      </div> 
    </header>

    <section class="shop container">
      <h2 class="section-title">เมนูอาหาร</h2>
      <% for(var i=0; i<product.length; i++) {%>
        <div class="shop-content">
          <div class="product-box">
            <img src="<%= product[i].img %>" alt="" width="20" class="product-img">
            <h2 class="product-title"><%= product[i].name %></h2>
            <span class="price"><%= product[i].price %> บาท</span>
          </div>     
        </div>
     <% } %>
      <!-- Content -->


       

  </section>
  </body>
  <script src="/js/main.js"></script>
</html>
